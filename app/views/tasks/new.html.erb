<!-- Error Messages -->
<% @task.errors.full_messages.each do |error| %>
  <p><%= error %> </p>
<% end %>

<!-- Form -->
<div class='form-group align-item-center container border' >
  <%= form_for @task do |f| %>
    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6 text-center' >
        <%= f.label :title, 'Task Title:' %>
        <%= f.text_field :title, class: 'form-control mb-2', placeholder: 'Your Title'%>
      </div>
    </div>
    <br>

    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6' align='center'>
        <%= f.label :description, 'Description:'%>
        <%= f.text_area :description, class: 'form-control mb-2', rows: '4'%>
      </div>
    </div>
    <br>

    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6 text-center' >
        <%= f.label :status, 'Status:' %>
        <%= f.select :status, ['incomplete', 'complete'] , class: 'form-control mb-2'%>
      </div>
    </div>
    <br>

    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6 text-center' >
        <%= f.label :priority, 'Priority:' %>
        <%= f.select :priority, ['Low', 'Medium', 'High'] , class: 'form-control mb-2'%>
      </div>
    </div>
    <br>

    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6 text-center' >
        <%= f.label :share, 'Privacy:' %>
        <%= f.select :share, [['Public', true], ['Private', false]], class: 'form-control mb-2' %>
      </div>
    </div>




    <br>


    <br>

    <div class='row'>
      <p class='col-6'></p>
      <div class='col-6' align='center'>
        <%= f.hidden_field :user_id, value: params[:id]%>
        <%= f.submit class: 'btn btn-primary col-4'%>
        <%= link_to 'Go Back', :back, class: 'btn btn-secondary col-4' %>
      </div>
    </div>

  <% end %>
</div>
