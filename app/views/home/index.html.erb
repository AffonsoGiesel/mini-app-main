<div class='cointainer'>

  <div class='flex-row'>
    <!-- Heading -->
    <div class='d-flex justify-content-center'>
      <h1> Task Manager App </h1>
    </div>
    <div class='d-flex justify-content-center'>
      <p> A Short Description of the App </p>
    </div>
  </div>

  <!-- Display of random tasks-->
  <table>
    <thead>
    <div class="col-md-6 col-sm-6  ">
      <div class="x_content">
        <div class="table table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Share</th>
    </tr>
    </thead>
    <tbody>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task.id) %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.share %></td>
      </tr>
    <% end %>
    </tbody>
</table>

</div>


